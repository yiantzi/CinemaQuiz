<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/myImageView"
        android:src="@drawable/question10"
        />

    <EditText
        android:id="@+id/editText3"
        style="@style/myEditText"
        android:text="The movie 'A Streetcar named desire' won:"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/radioQuestionGroup"
        style="@style/myRadioGroup" >

    <RadioButton
        android:id="@+id/q10_rd01"
        style="@style/myRadioButton"
        android:text="6 Oscars" />

    <RadioButton
        android:id="@+id/q10_rd02"
        style="@style/myRadioButton"
        android:text="8 Oscars" />

    <RadioButton
        android:id="@+id/q10_rd03"
        style="@style/myRadioButton"
        android:text="4 Oscars" />

    <RadioButton
        android:id="@+id/q10_rd04"
        style="@style/myRadioButton"
        android:text="5 Oscars" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        style="@style/myButton"
        android:onClick="submitButton" />

</LinearLayout>