<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/myImageView"
        android:src="@drawable/question05" />

    <EditText
        android:id="@+id/editText3"
        style="@style/myEditText"
        android:text="What is the name of the above film?"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/radioQuestionGroup"
        style="@style/myRadioGroup">

    <RadioButton
        android:id="@+id/q05_rd01"
        style="@style/myRadioButton"
        android:text="To me, you are perfect" />

    <RadioButton
        android:id="@+id/q05_rd02"
        style="@style/myRadioButton"
        android:text="Love Bites" />

    <RadioButton
        android:id="@+id/q05_rd03"
        style="@style/myRadioButton"
        android:text="You have mail" />

    <RadioButton
        android:id="@+id/q05_rd04"
        style="@style/myRadioButton"
        android:text="Love Actually" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        style="@style/myButton"
        android:onClick="submitButton" />

</LinearLayout>