<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/myImageView"
        android:src="@drawable/question07"
        />

    <EditText
        android:id="@+id/editText3"
        style="@style/myEditText"
        android:text="Who is the author of Christine?"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/radioQuestionGroup"
        style="@style/myRadioGroup" >

    <RadioButton
        android:id="@+id/q07_rd01"
        style="@style/myRadioButton"
        android:text="John Carpenter" />

    <RadioButton
        android:id="@+id/q07_rd02"
        style="@style/myRadioButton"
        android:text="Stephen King" />

    <RadioButton
        android:id="@+id/q07_rd03"
        style="@style/myRadioButton"
        android:text="David Lynch" />

    <RadioButton
        android:id="@+id/q07_rd04"
        style="@style/myRadioButton"
        android:text="Darren Aronofsky" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        style="@style/myButton"
        android:onClick="submitButton" />

</LinearLayout>