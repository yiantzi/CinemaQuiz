<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/myImageView"
        android:src="@drawable/question09"
        />

    <EditText
        android:id="@+id/editText3"
        style="@style/myEditText"
        android:text="The dictator's name in Charlie's Chaplin 'The Great Dictator' movie was:"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/radioQuestionGroup"
        style="@style/myRadioGroup" >

    <RadioButton
        android:id="@+id/q09_rd01"
        style="@style/myRadioButton"
        android:text="Adenoid Henkel" />

    <RadioButton
        android:id="@+id/q09_rd02"
        style="@style/myRadioButton"
        android:text="Aden Hynkel" />

    <RadioButton
        android:id="@+id/q09_rd03"
        style="@style/myRadioButton"
        android:text="Aden Henkel" />

    <RadioButton
        android:id="@+id/q09_rd04"
        style="@style/myRadioButton"
        android:text="Adenoid Hynkel" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        style="@style/myButton"
        android:onClick="submitButton" />

</LinearLayout>