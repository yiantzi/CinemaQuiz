<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/myImageView"
        android:src="@drawable/question08"
        />

    <EditText
        android:id="@+id/editText3"
        style="@style/myEditText"
        android:text="The Birds was directed by:"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/radioQuestionGroup"
        style="@style/myRadioGroup" >

    <RadioButton
        android:id="@+id/q08_rd01"
        style="@style/myRadioButton"
        android:text="Alfred Hitchcock" />

    <RadioButton
        android:id="@+id/q08_rd02"
        style="@style/myRadioButton"
        android:text="Steven Spieleberg" />

    <RadioButton
        android:id="@+id/q08_rd03"
        style="@style/myRadioButton"
        android:text="James Cameron" />

    <RadioButton
        android:id="@+id/q08_rd04"
        style="@style/myRadioButton"
        android:text="Woody Allen" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        style="@style/myButton"
        android:onClick="submitButton" />

</LinearLayout>